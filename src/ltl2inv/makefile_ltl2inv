include ../make.sys

ifeq ($(BLIS_ROOT),)
	BLIS_ROOT = ../pfaffine/src/dep
endif

OBJ = ltl2inv.o
SRC = ltl2inv.cc
HDR = invert.tcc pfaffian.tcc \
	  ../common/blalink.hh ../common/blalink_fort.h ../common/colmaj.hh

$(OBJ): $(SRC) $(HDR) 
	$(CXX) $(CXXFLAGS) -D_CC_IMPL -c $< -o $@ \
		-I../common \
		-I$(BLIS_ROOT)/include \
		-I$(BLIS_ROOT)/include/blis

clean:
	rm -f $(OBJ)
