include ../make.sys

ifeq ($(BLIS_ROOT),)
	BLIS_ROOT = ../pfaffine/src/dep
endif

OBJ = ltl2inv.o
SRC = ltl2inv.cc
HDR = blalink.hh blalink_fort.h colmaj.hh invert.tcc pfaffian.tcc

$(OBJ): $(SRC) $(HDR) 
	$(CXX) $(CXXFLAGS) -D_CC_IMPL -c $< -o $@ \
		-I$(BLIS_ROOT)/include \
		-I$(BLIS_ROOT)/include/blis

clean:
	rm -f $(OBJ)
